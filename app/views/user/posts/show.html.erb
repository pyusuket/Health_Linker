<div class="flex h-full justify-center items-center">
  <div class="bg-white py-6 sm:py-8 lg:py-12">
    <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
      <div class="grid gap-x-4 gap-y-8 sm:grid-cols-2 md:gap-x-6 lg:grid-cols-3 xl:grid-cols-4">
        <div class="h-full w-full relative mb-2 block overflow-hidden rounded-lg lg:mb-3">
          <div class="slick-carousel text-center">
          <% @post.images.each do |image| %>
            <%= image_tag(image, class: "w-full h-full object-cover inline-block") %>
          <% end %>
        </div>
        </div>
      </div>
        <div class="flex flex-col items-start lg:items-center">
          <div class="flex items-end gap-2 lg:flex-row">
            <p><%= @post.created_at.strftime("%Y/%-m/%-d")%></p>
          </div>
          <div>
            <p><%= @post.body %></p>
          </div>
          <p class="lg:ml-auto">コメント件数：<%= @post.comments.count %></p>
          <div class="mt-10">
            <h1>コメント欄</h1>
            <% @post.comments.each do |comment| %>
              <div class="flex items-center mb-2">
                <% if comment.user.profile_image.present? %>
                  <%= image_tag comment.user.profile_image, class: "w-10 h-10 rounded-full mr-2" %>
                <% else %>
                  <%= image_tag "no_image.jpg", class: "w-10 h-10 rounded-full mr-2" %>
                <% end %>
                <div>
                  <%= comment.user.user_name %>
                  <p><%= comment.body %></p>
                  <p><%= comment.created_at.strftime('%Y/%m/%d') %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    $('.slick-carousel').slick({
      dots: true,
      infinite: true,
      speed: 300,
      slidesToShow: 1,
      slidesToScroll: 1
    });
  });
</script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
