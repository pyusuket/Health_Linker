<%= form_with model: @user, url: user_session_path do |f| %>

<div class="form-wrapper">
  <h1>ログイン</h1>
    <div class="form-item">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-item">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <div class="button-panel">
      <%= f.submit "ログイン", class:"button" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  <div class="form-footer">
    <div class="button-panel">
      <%= f.submit "新規登録", class:"button" %>
    </div>
    <div class="button-panel">
      <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
    </div>
  </div>

</div>
<% end %>
